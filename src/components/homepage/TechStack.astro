  .tech-item {
    @apply flex flex-col items-center gap-2 p-4;
    @apply bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-lg;
    @apply transition-all duration-300 cursor-default;
    @apply hover:border-emerald-500/50;
    position: relative;
    overflow: hidden;
  }

  .tech-item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(16, 185, 129, 0.2) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .tech-item:hover::before {
    opacity: 1;
  }

  .tech-item svg {
    @apply text-slate-400 transition-all duration-300;
  }

  .tech-item:hover svg {
    @apply text-emerald-400;
    filter: drop-shadow(0 0 20px rgba(16, 185, 129, 0.5));
  }

  .tech-item span {
    @apply text-xs text-slate-400 font-medium;
    @apply transition-colors duration-300;
  }

  .tech-item:hover span {
    @apply text-emerald-400;
  }

  /* Staggered fade-in animation */
  .tech-item {
    opacity: 0;
    transform: translateY(20px);
  }

  .tech-item.in-view {
    animation: fadeInUp 0.4s ease-out forwards;
  }

  /* Add delays for staggered effect */
  .tech-item:nth-child(1).in-view { animation-delay: 0s; }
  .tech-item:nth-child(2).in-view { animation-delay: 0.05s; }
  .tech-item:nth-child(3).in-view { animation-delay: 0.1s; }
  .tech-item:nth-child(4).in-view { animation-delay: 0.15s; }
  .tech-item:nth-child(5).in-view { animation-delay: 0.2s; }
  .tech-item:nth-child(6).in-view { animation-delay: 0.25s; }
  .tech-item:nth-child(7).in-view { animation-delay: 0.3s; }
  .tech-item:nth-child(8).in-view { animation-delay: 0.35s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  const techItems = document.querySelectorAll('.tech-item');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('in-view');
      }
    });
  }, { threshold: 0.1 });

  techItems.forEach(item => observer.observe(item));
</script>
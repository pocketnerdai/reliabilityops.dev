---
// Call-to-action section
---

<section id="cta" class="py-20 relative overflow-hidden">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 bg-gradient-to-r from-emerald-600 via-emerald-500 to-cyan-600 animate-gradient"></div>
  
  <!-- Pattern overlay -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.3"%3E%3Cpath d="M0 40L40 0H20L0 20M40 40V20L20 40"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
        Ready to Achieve 99.99% Uptime?
      </h2>
      <p class="text-xl md:text-2xl text-emerald-50 mb-8 leading-relaxed">
        Join industry leaders who trust ReliabilityOps to prevent outages and save millions
      </p>
      
      <!-- Stats highlight -->
      <div class="flex flex-wrap justify-center gap-8 mb-10">
        <div class="text-center">
          <div class="text-3xl font-bold text-white">24/7</div>
          <div class="text-emerald-100">Monitoring</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white">30min</div>
          <div class="text-emerald-100">Early Detection</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white">3x ROI</div>
          <div class="text-emerald-100">In 6 Months</div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="cta-button cta-primary group">
          <span>Get Started Today</span>
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="/case-studies" class="cta-button cta-secondary group">
          <span>View Success Stories</span>
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </a>
      </div>

      <!-- Trust indicator -->
      <div class="mt-12">
        <p class="text-emerald-100 text-sm">
          Trusted by engineering teams at Fortune 500 companies
        </p>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-10 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl animate-float"></div>
  <div class="absolute bottom-10 right-10 w-32 h-32 bg-white/10 rounded-full blur-xl animate-float-delayed"></div>
</section>

<style>
  @keyframes gradient {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  @keyframes float-delayed {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(-30px, 20px) scale(1.1);
    }
    66% {
      transform: translate(20px, -30px) scale(0.9);
    }
  }

  .animate-gradient {
    animation: gradient 8s ease infinite;
    background-size: 200% 200%;
  }

  .animate-float {
    animation: float 15s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 20s ease-in-out infinite;
  }

  .cta-button {
    @apply inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold;
    @apply transition-all duration-300 transform hover:scale-105;
    @apply focus:outline-none focus:ring-4 focus:ring-white/50;
    position: relative;
    overflow: hidden;
  }

  .cta-primary {
    @apply bg-white text-emerald-600;
    @apply hover:bg-gray-100;
    @apply shadow-xl hover:shadow-2xl;
  }

  .cta-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .cta-primary:hover::before {
    transform: translateX(100%);
  }

  .cta-secondary {
    @apply bg-transparent text-white;
    @apply border-2 border-white/50 hover:border-white;
    @apply hover:bg-white/10;
    backdrop-filter: blur(10px);
  }

  /* Animated border gradient */
  .cta-secondary::after {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(45deg, #10b981, #06b6d4, #10b981);
    border-radius: 0.5rem;
    opacity: 0;
    z-index: -1;
    transition: opacity 0.3s;
    background-size: 200% 200%;
    animation: gradient 3s ease infinite;
  }

  .cta-secondary:hover::after {
    opacity: 0.5;
  }
</style>
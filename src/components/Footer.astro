---
import { AUTHOR_NAME, AUTHOR_EMAIL, SOCIAL_LINKS, NAV_ITEMS } from '../consts';
const today = new Date();
---

<footer class="bg-navy-800 border-t border-navy-700">
	<div class="container-custom py-12">
		<div class="grid md:grid-cols-4 gap-8">
			<!-- Brand Column -->
			<div class="md:col-span-1">
				<h3 class="text-2xl font-bold mb-4">
					<span class="text-military-green">⚡</span> ReliabilityOps
				</h3>
				<p class="text-navy-400 text-sm mb-4">
					Preventing Outages Before They Happen
				</p>
				<div class="flex gap-3">
					{SOCIAL_LINKS.github && (
						<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" 
						   class="text-navy-400 hover:text-military-green transition-colors">
							<span class="sr-only">GitHub</span>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 16 16">
								<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
							</svg>
						</a>
					)}
					
					{SOCIAL_LINKS.linkedin && (
						<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" 
						   class="text-navy-400 hover:text-military-green transition-colors">
							<span class="sr-only">LinkedIn</span>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
							</svg>
						</a>
					)}
					
					{SOCIAL_LINKS.devto && (
						<a href={SOCIAL_LINKS.devto} target="_blank" rel="noopener noreferrer" 
						   class="text-navy-400 hover:text-military-green transition-colors">
							<span class="sr-only">Dev.to</span>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M7.42 10.05c-.18-.16-.46-.23-.84-.23H6l.02 2.44.04 2.45.56-.02c.41 0 .63-.07.83-.26.24-.24.26-.36.26-2.2 0-1.91-.02-1.96-.29-2.18zM0 4.94v14.12h24V4.94H0zM8.56 15.3c-.44.58-1.06.77-2.53.77H4.71V8.53h1.4c1.67 0 2.16.18 2.6.9.27.43.29.6.32 2.57.05 2.23-.02 2.73-.47 3.3zm5.09-5.47h-2.47v1.77h1.52v1.28l-.72.04-.75.03v1.77l1.22.03 1.2.04v1.28h-1.6c-1.53 0-1.6-.01-1.87-.3l-.3-.28v-3.16c0-3.02.01-3.18.25-3.48.23-.31.25-.31 1.88-.31h1.64v1.3zm4.68 5.45c-.17.43-.64.79-1 .79-.18 0-.45-.15-.67-.39-.32-.32-.45-.63-.82-2.08l-.9-3.39-.45-1.67h.76c.4 0 .75.02.75.05 0 .06 1.16 4.54 1.26 4.83.04.15.32-.7.73-2.3l.66-2.52.74-.04c.4-.02.73 0 .73.04 0 .14-1.67 6.38-1.8 6.68z"/>
							</svg>
						</a>
					)}
				</div>
			</div>
			
			<!-- Quick Links -->
			<div>
				<h4 class="font-semibold text-white mb-4">Quick Links</h4>
				<ul class="space-y-2">
					{NAV_ITEMS.map((item) => (
						<li>
							<a href={item.href} class="text-navy-400 hover:text-military-green text-sm transition-colors">
								{item.label}
							</a>
						</li>
					))}
				</ul>
			</div>
			
			<!-- Resources -->
			<div>
				<h4 class="font-semibold text-white mb-4">Resources</h4>
				<ul class="space-y-2">
					<li>
						<a href="/blog" class="text-navy-400 hover:text-military-green text-sm transition-colors">
							Latest Posts
						</a>
					</li>
					<li>
						<a href="/rss.xml" target="_blank" class="text-navy-400 hover:text-military-green text-sm transition-colors">
							RSS Feed
						</a>
					</li>
					<li>
						<a href="/sitemap-index.xml" target="_blank" class="text-navy-400 hover:text-military-green text-sm transition-colors">
							Sitemap
						</a>
					</li>
				</ul>
			</div>
			
			<!-- Contact -->
			<div>
				<h4 class="font-semibold text-white mb-4">Get in Touch</h4>
				<p class="text-navy-400 text-sm mb-4">
					Let's discuss how predictive reliability can transform your operations.
				</p>
				<a href={`mailto:${AUTHOR_EMAIL}`} class="inline-flex items-center gap-2 text-military-green hover:text-military-green-light text-sm transition-colors">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
					</svg>
					{AUTHOR_EMAIL}
				</a>
			</div>
		</div>
		
		<!-- Bottom Bar -->
		<div class="mt-8 pt-8 border-t border-navy-700 flex flex-col md:flex-row justify-between items-center text-sm text-navy-400">
			<p>&copy; {today.getFullYear()} {AUTHOR_NAME}. All rights reserved.</p>
			<p class="mt-2 md:mt-0">
				Built with <span class="text-military-green">Astro</span> • Deployed on <span class="text-accent-blue">Cloudflare</span>
			</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background-color: var(--color-navy-800);
		border-top: 1px solid var(--color-navy-700);
	}
	
	.footer-content {
		padding: 3rem 0;
	}
	
	.footer-grid {
		display: grid;
		gap: 2rem;
		margin-bottom: 2rem;
	}
	
	@media (min-width: 768px) {
		.footer-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}
	
	.footer-brand h3 {
		font-size: 1.5rem;
		font-weight: bold;
		margin-bottom: 1rem;
	}
	
	.footer-brand p {
		color: var(--color-navy-400);
		font-size: 0.875rem;
		margin-bottom: 1rem;
	}
	
	.footer-socials {
		display: flex;
		gap: 0.75rem;
	}
	
	.footer-socials a {
		color: var(--color-navy-400);
		transition: color 200ms;
	}
	
	.footer-socials a:hover {
		color: var(--color-military-green);
	}
	
	.footer-socials svg {
		width: 1.25rem;
		height: 1.25rem;
	}
	
	.footer-column h4 {
		font-weight: 600;
		color: white;
		margin-bottom: 1rem;
	}
	
	.footer-column ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.footer-column li {
		margin-bottom: 0.5rem;
	}
	
	.footer-column a {
		color: var(--color-navy-400);
		font-size: 0.875rem;
		text-decoration: none;
		transition: color 200ms;
	}
	
	.footer-column a:hover {
		color: var(--color-military-green);
	}
	
	.footer-contact p {
		color: var(--color-navy-400);
		font-size: 0.875rem;
		margin-bottom: 1rem;
	}
	
	.footer-contact a {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-military-green);
		font-size: 0.875rem;
		text-decoration: none;
		transition: color 200ms;
	}
	
	.footer-contact a:hover {
		color: var(--color-military-green-light);
	}
	
	.footer-contact svg {
		width: 1rem;
		height: 1rem;
	}
	
	.footer-bottom {
		margin-top: 2rem;
		padding-top: 2rem;
		border-top: 1px solid var(--color-navy-700);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.875rem;
		color: var(--color-navy-400);
	}
	
	@media (min-width: 768px) {
		.footer-bottom {
			flex-direction: row;
			justify-content: space-between;
		}
	}
	
	.footer-bottom span {
		color: var(--color-military-green);
	}
	
	.footer-bottom .accent-blue {
		color: var(--color-accent-blue);
	}
</style>
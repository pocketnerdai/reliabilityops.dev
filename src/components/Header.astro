						</svg>
					</a>
				)}
				
				{SOCIAL_LINKS.linkedin && (
					<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="text-navy-400 hover:text-military-green transition-colors">
						<span class="sr-only">LinkedIn</span>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
				)}
				
				{SOCIAL_LINKS.devto && (
					<a href={SOCIAL_LINKS.devto} target="_blank" rel="noopener noreferrer" class="text-navy-400 hover:text-military-green transition-colors">
						<span class="sr-only">Dev.to</span>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M7.42 10.05c-.18-.16-.46-.23-.84-.23H6l.02 2.44.04 2.45.56-.02c.41 0 .63-.07.83-.26.24-.24.26-.36.26-2.2 0-1.91-.02-1.96-.29-2.18zM0 4.94v14.12h24V4.94H0zM8.56 15.3c-.44.58-1.06.77-2.53.77H4.71V8.53h1.4c1.67 0 2.16.18 2.6.9.27.43.29.6.32 2.57.05 2.23-.02 2.73-.47 3.3zm5.09-5.47h-2.47v1.77h1.52v1.28l-.72.04-.75.03v1.77l1.22.03 1.2.04v1.28h-1.6c-1.53 0-1.6-.01-1.87-.3l-.3-.28v-3.16c0-3.02.01-3.18.25-3.48.23-.31.25-.31 1.88-.31h1.64v1.3zm4.68 5.45c-.17.43-.64.79-1 .79-.18 0-.45-.15-.67-.39-.32-.32-.45-.63-.82-2.08l-.9-3.39-.45-1.67h.76c.4 0 .75.02.75.05 0 .06 1.16 4.54 1.26 4.83.04.15.32-.7.73-2.3l.66-2.52.74-.04c.4-.02.73 0 .73.04 0 .14-1.67 6.38-1.8 6.68z"/>
						</svg>
					</a>
				)}
			</div>
			
			<!-- Mobile menu button -->
			<button class="md:hidden text-navy-400 hover:text-military-green" id="mobile-menu-button">
				<span class="sr-only">Open menu</span>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
	</nav>
	
	<!-- Mobile Navigation -->
	<div class="hidden md:hidden" id="mobile-menu">
		<div class="px-2 pt-2 pb-3 space-y-1">
			{NAV_ITEMS.map((item) => (
				<a href={item.href} class="block px-3 py-2 text-base font-medium text-navy-300 hover:text-military-green hover:bg-navy-800 rounded-md transition-colors">
					{item.label}
				</a>
			))}
		</div>
	</div>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
</script>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 50;
		background-color: rgba(15, 23, 42, 0.95);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid #334155;
		transition: all 0.3s ease-in-out;
	}
	
	.nav-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top: 1rem;
		padding-bottom: 1rem;
	}
	
	.logo-wrapper {
		font-size: 1.5rem;
		font-weight: bold;
	}
	
	.logo-link {
		color: white !important;
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: color 200ms;
	}
	
	.logo-link:hover {
		color: var(--color-military-green) !important;
	}
	
	.logo-icon {
		color: var(--color-military-green) !important;
	}
	
	.terminal-cursor::after {
		animation-delay: 0.5s;
	}
	
	.nav-links {
		display: none;
		align-items: center;
		gap: 2rem;
	}
	
	@media (min-width: 768px) {
		.nav-links {
			display: flex;
		}
	}
	
	.nav-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.social-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	.social-link {
		color: var(--color-navy-400);
		transition: color 200ms;
	}
	
	.social-link:hover {
		color: var(--color-military-green);
	}
	
	.social-icon, .menu-icon {
		width: 1.5rem;
		height: 1.5rem;
	}
	
	.mobile-menu-btn {
		display: block;
		color: var(--color-navy-400);
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		transition: color 200ms;
	}
	
	.mobile-menu-btn:hover {
		color: var(--color-military-green);
	}
	
	@media (min-width: 768px) {
		.mobile-menu-btn {
			display: none;
		}
	}
	
	.mobile-menu {
		display: none;
	}
	
	@media (max-width: 767px) {
		.mobile-menu.show {
			display: block;
		}
	}
	
	.mobile-menu-content {
		padding: 0.5rem 0.5rem 0.75rem;
	}
	
	.mobile-nav-link {
		display: block;
		padding: 0.75rem;
		margin: 0.25rem 0;
		font-size: 1rem;
		font-weight: 500;
		color: #CBD5E1;
		text-decoration: none;
		border-radius: 0.375rem;
		transition: all 200ms;
	}
	
	.mobile-nav-link:hover {
		color: var(--color-military-green);
		background-color: rgba(30, 41, 59, 0.8);
	}
</style>
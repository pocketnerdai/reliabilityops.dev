---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, NAV_ITEMS, SOCIAL_LINKS } from '../consts';
---

<header>
	<nav class="container-custom flex items-center justify-between py-4">
		<!-- Logo/Brand -->
		<h2 class="text-2xl font-bold">
			<a href="/" class="logo-link flex items-center gap-2">
				<span class="logo-icon terminal-cursor">âš¡</span>
				{SITE_TITLE}
			</a>
		</h2>
		
		<!-- Navigation Links -->
		<div class="hidden md:flex items-center gap-8">
			{NAV_ITEMS.map((item) => (
				<HeaderLink href={item.href}>{item.label}</HeaderLink>
			))}
		</div>
		
		<!-- Social Links & Theme Toggle -->
		<div class="flex items-center gap-4">
			<div class="social-links flex items-center gap-3">
				{SOCIAL_LINKS.github && (
					<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="text-navy-400 hover:text-military-green transition-colors">

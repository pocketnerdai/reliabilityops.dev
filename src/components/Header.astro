---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, NAV_ITEMS, SOCIAL_LINKS } from '../consts';
---

<header class="fixed top-0 w-full bg-slate-900/80 backdrop-blur-md z-50 border-b border-slate-800">
	<nav class="container mx-auto px-4 py-4">
		<div class="flex justify-between items-center">
			<!-- Logo/Brand -->
			<a href="/" class="flex items-center space-x-2">
				<span class="text-2xl">âš¡</span>
				<span class="text-xl font-bold">
					<span class="text-white">Reliability</span>
					<span class="text-emerald-400">Ops</span>
				</span>
			</a>
			
			<!-- Mobile menu button -->
			<button 
				class="md:hidden text-slate-300 hover:text-white transition-colors p-2" 
				id="mobile-menu-toggle"
				aria-label="Toggle mobile menu"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
			
			<!-- Desktop nav -->
			<div class="hidden md:flex items-center gap-8">
				{NAV_ITEMS.map((item) => (
					<HeaderLink href={item.href} class="nav-link">
						{item.label}
					</HeaderLink>
				))}
				<a href="/contact" class="btn-primary-small">Contact</a>
			</div>
		</div>
		
		<!-- Mobile menu -->
		<div class="hidden md:hidden mt-4 pb-4" id="mobile-menu">
			<div class="flex flex-col space-y-4">
				{NAV_ITEMS.map((item) => (
					<a 
						href={item.href} 
						class="text-slate-300 hover:text-emerald-400 transition-colors py-2 font-medium"
					>
						{item.label}
					</a>
				))}
				<div class="flex gap-4 pt-4 border-t border-slate-800">
					{SOCIAL_LINKS.github && (
						<a 
							href={SOCIAL_LINKS.github} 
							target="_blank" 
							rel="noopener noreferrer" 
							class="social-link"
							aria-label="GitHub"
						>

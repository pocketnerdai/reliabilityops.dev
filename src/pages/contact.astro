---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, AUTHOR_EMAIL, SOCIAL_LINKS } from '../consts';

const pageTitle = `Contact - ${SITE_TITLE}`;
const pageDescription = "Get in touch to discuss how AI-driven reliability can transform your operations.";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={pageDescription} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="bg-gradient-to-b from-slate-900 to-slate-800 py-20">
				<div class="container mx-auto px-4">
					<div class="max-w-4xl mx-auto text-center">
						<h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
							Let's Build Reliable Systems Together
						</h1>
						<p class="text-xl text-slate-300">
							Available for consulting, speaking engagements, and strategic advisory
						</p>
					</div>
				</div>
			</section>

			<!-- Contact Section -->
			<section class="py-20 bg-slate-900">
				<div class="container mx-auto px-4">
					<div class="max-w-4xl mx-auto">
						<div class="grid md:grid-cols-2 gap-12">
							<!-- Contact Form -->
							<div>
								<h2 class="text-2xl font-bold text-white mb-6">Send a Message</h2>
								<form 
									action="https://formspree.io/f/YOUR_FORM_ID" 
									method="POST"
									class="space-y-6"
								>
									<div>
										<label for="name" class="block text-sm font-medium text-slate-300 mb-2">
											Name
										</label>
										<input
											type="text"
											id="name"
											name="name"
											required
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-900"
											placeholder="Your name"
										/>
									</div>
									
									<div>
										<label for="email" class="block text-sm font-medium text-slate-300 mb-2">
											Email
										</label>
										<input
											type="email"
											id="email"
											name="email"
											required
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-900"
											placeholder="your@email.com"
										/>
									</div>
									
									<div>
										<label for="company" class="block text-sm font-medium text-slate-300 mb-2">
											Company (Optional)
										</label>
										<input
											type="text"
											id="company"
											name="company"
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-900"
											placeholder="Your company"
										/>
									</div>
									
									<div>
										<label for="message" class="block text-sm font-medium text-slate-300 mb-2">
											Message
										</label>
										<textarea
											id="message"
											name="message"
											rows="4"
											required
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-400 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-slate-900 resize-none"
											placeholder="Tell me about your reliability challenges..."
										></textarea>
									</div>
									
									<button
										type="submit"
										class="w-full btn-primary justify-center"
									>
										Send Message
										<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
										</svg>
									</button>
								</form>
								
								<p class="mt-4 text-sm text-slate-400">
									Note: For now, this form opens your email client. A proper form handler will be implemented soon.
								</p>
							</div>
							
							<!-- Contact Info -->
							<div>
								<h2 class="text-2xl font-bold text-white mb-6">Other Ways to Connect</h2>
								
								<div class="space-y-6">
									<!-- Email -->
									<div class="flex items-start space-x-4">
										<div class="flex-shrink-0 w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center">
											<svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
											</svg>
										</div>
										<div>
											<h3 class="font-semibold text-white mb-1">Email</h3>
											<a href={`mailto:${AUTHOR_EMAIL}`} class="text-emerald-400 hover:text-emerald-300">
												{AUTHOR_EMAIL}
											</a>
											<p class="text-sm text-slate-400 mt-1">
												Usually respond within 24 hours
											</p>
										</div>
									</div>
									
									<!-- LinkedIn -->
									{SOCIAL_LINKS.linkedin && (
										<div class="flex items-start space-x-4">
											<div class="flex-shrink-0 w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center">
												<svg class="w-6 h-6 text-emerald-400" fill="currentColor" viewBox="0 0 24 24">
													<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
												</svg>
											</div>
											<div>
												<h3 class="font-semibold text-white mb-1">LinkedIn</h3>
												<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="text-emerald-400 hover:text-emerald-300">
													Connect on LinkedIn
												</a>
												<p class="text-sm text-slate-400 mt-1">
													Professional networking and updates
												</p>
											</div>
										</div>
									)}
									
									<!-- GitHub -->
									{SOCIAL_LINKS.github && (
										<div class="flex items-start space-x-4">
											<div class="flex-shrink-0 w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center">
												<svg class="w-6 h-6 text-emerald-400" fill="currentColor" viewBox="0 0 24 24">
													<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
												</svg>
											</div>
											<div>
												<h3 class="font-semibold text-white mb-1">GitHub</h3>
												<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="text-emerald-400 hover:text-emerald-300">
													View open source projects
												</a>
												<p class="text-sm text-slate-400 mt-1">
													Tools and contributions
												</p>
											</div>
										</div>
									)}
								</div>
								
								<!-- Availability -->
								<div class="mt-12 p-6 bg-slate-800 rounded-lg border border-slate-700">
									<h3 class="font-semibold text-white mb-3">Current Availability</h3>
									<ul class="space-y-2 text-slate-300">
										<li class="flex items-center">
											<svg class="w-5 h-5 text-emerald-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
											</svg>
											Consulting engagements (2-6 months)
										</li>
										<li class="flex items-center">
											<svg class="w-5 h-5 text-emerald-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
											</svg>
											Technical advisory roles
										</li>
										<li class="flex items-center">
											<svg class="w-5 h-5 text-emerald-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
											</svg>
											Speaking at conferences/events
										</li>
										<li class="flex items-center">
											<svg class="w-5 h-5 text-emerald-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
											</svg>
											Workshop facilitation
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<script define:vars={{ AUTHOR_EMAIL }}>
	// Update form to use mailto as a temporary solution
	const form = document.querySelector('form');
	form?.addEventListener('submit', (e) => {
		e.preventDefault();
		const formData = new FormData(form);
		const subject = `Contact from ReliabilityOps.dev - ${formData.get('name')}`;
		const body = `Name: ${formData.get('name')}
Email: ${formData.get('email')}
Company: ${formData.get('company') || 'Not provided'}

Message:
${formData.get('message')}`;
		
		window.location.href = `mailto:${AUTHOR_EMAIL}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
	});
</script>
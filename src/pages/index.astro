---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogCard from '../components/BlogCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

// Get latest blog posts
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);

// Calculate read time (rough estimate)
const calculateReadTime = (content: string) => {
	const wordsPerMinute = 200;
	const words = content.split(/\s+/).length;
	return Math.ceil(words / wordsPerMinute);
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="min-h-screen bg-gradient-to-b from-slate-900 to-slate-800 relative overflow-hidden">
				<!-- Background gradient effect -->
				<div class="absolute inset-0 bg-gradient-hero opacity-50"></div>
				
				<!-- Content -->
				<div class="container mx-auto px-4 py-20 relative z-10">
					<div class="max-w-4xl mx-auto text-center">
						<!-- Main headline -->
						<h1 class="text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-in">
							Preventing Outages Before They Happen
						</h1>
						
						<!-- Subheadline -->
						<p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-3xl mx-auto animate-fade-in" style="animation-delay: 0.2s;">
							Military-trained SRE combining 15+ years of operational excellence 
							with cutting-edge AI to deliver 99.99%+ uptime
						</p>
						
						<!-- Metrics Grid -->
						<div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
							<div class="card-glass animate-slide-up" style="animation-delay: 0.3s;">
								<div class="text-3xl font-bold text-emerald-400">$2.8M+</div>
								<div class="text-slate-400">Saved</div>
							</div>
							<div class="card-glass animate-slide-up" style="animation-delay: 0.4s;">
								<div class="text-3xl font-bold text-emerald-400">99.99%</div>
								<div class="text-slate-400">Uptime</div>
							</div>
							<div class="card-glass animate-slide-up" style="animation-delay: 0.5s;">
								<div class="text-3xl font-bold text-emerald-400">67%</div>
								<div class="text-slate-400">Faster Recovery</div>
							</div>
							<div class="card-glass animate-slide-up" style="animation-delay: 0.6s;">
								<div class="text-3xl font-bold text-emerald-400">15+</div>
								<div class="text-slate-400">Years Experience</div>
							</div>
						</div>
						
						<!-- CTAs -->
						<div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.7s;">
							<a href="/tools" class="btn-primary">
								Explore AIOps Tools
								<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
								</svg>
							</a>
							<a href="/case-studies" class="btn-secondary">
								Read Case Studies
							</a>
						</div>
					</div>
				</div>
				
				<!-- Scroll indicator -->
				<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
					<svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
					</svg>
				</div>
			</section>

			<!-- Value Proposition Section -->
			<section class="py-20 bg-slate-900">
				<div class="container mx-auto px-4">
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
							Proactive Reliability Through Predictive Intelligence
						</h2>
						<p class="text-xl text-slate-300 max-w-2xl mx-auto">
							Transform your operations from reactive firefighting to proactive prevention
						</p>
					</div>
					
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<div class="text-center">
							<div class="w-16 h-16 bg-emerald-500/20 rounded-lg flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-white mb-3">AI-Driven Analytics</h3>
							<p class="text-slate-400">
								Pattern recognition and anomaly detection that catches issues 30+ minutes before impact
							</p>
						</div>
						
						<div class="text-center">
							<div class="w-16 h-16 bg-emerald-500/20 rounded-lg flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-white mb-3">Military Precision</h3>
							<p class="text-slate-400">
								Battle-tested operational discipline ensuring nothing falls through the cracks
							</p>
						</div>
						
						<div class="text-center">
							<div class="w-16 h-16 bg-emerald-500/20 rounded-lg flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-white mb-3">Proven ROI</h3>
							<p class="text-slate-400">
								Average 3x return on investment within 6 months through prevented outages
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Latest Blog Posts -->
			<section class="py-20 bg-slate-800">
				<div class="container mx-auto px-4">
					<div class="flex justify-between items-center mb-8">
						<h2 class="text-3xl font-bold text-white">Latest Insights</h2>
						<a href="/blog" class="text-emerald-400 hover:text-emerald-300 transition-colors">
							View all posts â†’
						</a>
					</div>
					
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
						{posts.map((post) => (
							<BlogCard
								title={post.data.title}
								excerpt={post.data.description}
								date={post.data.pubDate}
								slug={post.slug}
								readTime={calculateReadTime(post.body)}
								tags={['SRE', 'AI']}
							/>
						))}
					</div>
				</div>
			</section>

			<!-- CTA Section -->
			<section class="py-20 bg-gradient-to-r from-emerald-600 to-emerald-700">
				<div class="container mx-auto px-4 text-center">
					<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
						Ready to Achieve 99.99% Uptime?
					</h2>
					<p class="text-xl text-emerald-100 mb-8 max-w-2xl mx-auto">
						Let's discuss how AI-driven reliability can transform your operations
					</p>
					<a href="/contact" class="btn-primary bg-white text-emerald-600 hover:bg-gray-100">
						Get Started
						<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/homepage/Hero.astro';
import Services from '../components/homepage/Services.astro';
import Features from '../components/homepage/Features.astro';
import Stats from '../components/homepage/Stats.astro';
import LatestPosts from '../components/homepage/LatestPosts.astro';
import TechStack from '../components/homepage/TechStack.astro';
import CTA from '../components/homepage/CTA.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<!-- Preload critical CSS for hero gradient -->
		<link rel="preload" as="style" href="/css/hero-gradient.css" />
		<style>
			/* Smooth scrolling with offset for sticky nav */
			html {
				scroll-behavior: smooth;
				scroll-padding-top: 80px;
			}
			
			/* Performance optimization */
			main > * {
				contain: layout style paint;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero with animated gradient background -->
			<Hero />
			
			<!-- Services - What I Do -->
			<Services />
			
			<!-- Features with 3D hover effects -->
			<Features />
			
			<!-- Stats with count-up animations -->
			<Stats />
			
			<!-- Latest Posts from Sanity -->
			<LatestPosts />
			
			<!-- Tech Stack showcase -->
			<TechStack />
			
			<!-- Call to Action -->
			<CTA />
		</main>
		<Footer />
	</body>
</html>